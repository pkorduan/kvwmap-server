}

cases_geoserver() {
  case_found=true
  case "$1" in
    test)
      echo "test case in dcm geoserver"
    ;;
    install)
      case $2 in
        geoserver)
          install_geoserver_image
        ;;
      esac
    ;;
    uninstall)
      debug "Case uninstall in geoserver"
      case $2 in
        geoserver)
          #echo "Case geoserver"
          uninstall_geoserver
        ;;
        *)
          debug "No subcase $2 in geoserver"
          case_found=false
        ;;
      esac
    ;;
    *)
      #echo "No case found in dcm geoserver"
      case_found=false
    ;;
  esac
  debug "Case found after cases geoserver: $case_found"
}