{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "id": {
      "type": "integer"
    },
    "beschreibung": {
      "type": "string"
    },
    "cron_interval": {
      "type": "string"
    },
    "interval_type": {
      "enum": [
        "daily",
        "weekly",
        "monthly"
      ]
    },
    "interval_parameter_1": {
      "type": "string"
    },
    "interval_parameter_2": {
      "type": "string"
    },
    "backup_path": {
      "type": "string"
    },
    "backup_folder": {
      "type": "string"
    },
    "delete_after_n_days": {
      "type": "integer"
    },
    "tar": {
      "type": "array",
      "items": [
        {
          "tar_item": {
            "type": "object",
            "properties": {
              "source": {
                "type": "string"
              },
              "target_name": {
                "type": "string"
              },
              "tar_compress": {
                "type": "boolean"
              }
            }
          }
        }
      ]
    },
    "mysql_dump": {
      "type": "array",
      "items": [
        {
          "mysql_dump_item": {
            "type": "object",
            "properties": {
              "connection_id": {
                "type": "integer"
              },
              "container_id": {
                "type": "string"
              },
              "db_name": {
                "type": "string"
              },
              "target_name": {
                "type": "string"
              },
              "mysql_dump_parameter": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "pg_dump": {
      "type": "array",
      "items": [
        {
          "pg_dump_item": {
            "type": "object",
            "properties": {
              "connection_id": {
                "type": "integer"
              },
              "container_id": {
                "type": "string"
              },
              "db_user": {
                "type": "string"
              },
              "db_name": {
                "type": "string"
              },
              "target_name": {
                "type": "string"
              },
              "pg_dump_inserts": {
                "type": "boolean"
              },
              "pg_dump_column_inserts": {
                "type": "boolean"
              },
              "pg_dump_in_exclude_schemas": {
                "enum": [
                  "N",
                  "n"
                ]
              },
              "pg_dump_schemas": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "pg_dump_in_exclude_tables": {
                "enum": [
                  "T",
                  "t"
                ]
              },
              "pg_dump_tables": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "pg_dump_parameter": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "pg_dumpall": {
      "type": "array",
      "items": [
        {
          "pg_dumpall_item": {
            "type": "object",
            "properties": {
              "connection_id": {
                "type": "integer"
              },
              "container_id": {
                "type": "string"
              },
              "db_user": {
                "type": "string"
              },
              "db_name": {
                "type": "string"
              },
              "target_name": {
                "type": "string"
              },
              "pg_dumpall_parameter": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "rsync": {
      "type": "array",
      "items": [
        {
          "rsync_item": {
            "type": "object",
            "properties": {
              "source": {
                "type": "string"
              },
              "target": {
                "type": "string"
              },
              "parameter": {
                "type": "string"
              }
            }
          }
        }
      ]
    }
  }
}
